{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TS Watch Client",
      "type": "shell",
      "command": "tsc --build --noEmit --watch",
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/client"]
      },
      "options": {
        "cwd": "./client"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
